<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deepak.eprapplication.MainActivity2Activity$PlaceholderFragment">

    <TextView
        android:id="@+id/txt_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:padding="5dip"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Poetry Recitation Competition" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid_view"
        android:numColumns="3"
        android:layout_below="@+id/txt_album_name"
        android:layout_margin="10dip"></GridView>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_album_name"
        android:layout_margin="10dip"
        android:visibility="gone"
        />


</RelativeLayout>
